-- Title
The Printable interface
-- Input
interface Printable {
    function string: String;
}
monitor Monitor: Printable {
    initializer {}
    function string: String {
        return "a printable monitor";
    }
}
function main {
    value printable = Monitor() as Printable;
    value string = printable.string();
    print("%s\n", string);
}
-- Output
a printable monitor
