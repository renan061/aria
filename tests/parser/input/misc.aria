/*
 * Function definition
 */

// Function without return value(s)
function f1() {}

// Function with return value(s)
function f2(): Integer {
	return 1;
}

/*
 * Parameters
 */

// No parameters
function f3() {}

// Single parameter
function f4(a: Type) {}

// Many parameters
function f5(x: Byte, y: Integer, z: String) {}

/*
 * Variable declaration
 */

function f6() {
	// Single variable
	a: Integer;

	// Two variables
	x, y: Integer;

	// Many variables
	i, j, k, l, m, n, o: Integer;
}

/*
 * Type
 */

// Array type
function f7(a, b: [Array]) {
	// Upper ID type
	c: Type;

	// Nested arrays
	d: [[[Integer]]];
}

/*
 * Block
 */

// Empty block
function f8() {}

// Single statement/variable declaration
function f9() {
	a: Integer;
}

// Mixed between variable declarations and statements
function f10() {
	a: Integer;
	a = 1;
	b: Integer;
	b = a;
}

// Variable declarations first and statements second
function f11() {
	a: Integer;
	b: Integer;
	a = 1;
	b = a;
}

// Variable declarations second and statements first
function f12() {
	if not true {
		return;
	}
	a: Integer;
}

/*
 * Statement
 */

function f13() {
	// Declared variable assignment
	a = 1;

	// Declared variable assignment
	b := 2;

	foo();

	// While-Wait
	while not false wait in queue;

	// Signal
	signal queue;

	// Broadcast
	broadcast queue;

	// Return without an expression
	return;

	// Return with an expression
	return true;

	// If
	if true {}

	// If-ElseIf
	if true {} else if false {}

	// If-Else
	if true {} else {}

	// If-ElseIf-Else
	if true {} else if false {} else {}

	// While 
	while true {}

	// For
	// TODO

	// Spawn
	spawn {
		print("spawn");
	}

	// Block
	{
		block := "block";
		print(block);
	}
}

/*
 * Variable
 */

function f14() {
	// Lower ID Variable
	a = 1;

	// Indexed variable
	a[0] = 2;
}

/*
 * Expression
 */

function f15() {
	// Or
	a := true or false;

	// And
	a := true and false;
	
	// <=
	a := 1 <= 2;

	// >=
	a := 1 >= 2;

	// <
	a := 1 < 2;

	// >
	a := 1 > 2;

	// +
	a := 1 + 2;

	// -
	a := 1 - 2;

	// *
	a := 1 * 2;

	// /
	a := 1 / 2;

	// - (unary)
	a := -1;

	// not
	a := not true;

	/*
	 * Primary expression
	 */

	// Literal
	a := true;

	// Variable
	a := b;

	// Function call
	a := foo();
	
	// Parenthesized
	a := (1 - 1);

	/*
	 * Mixed expressions
	 */
	a := true or false or 1 > 2;
	a := not 1 <= 3 and false and 1 < 2 or 1 >= 2;
	a := (1 + 3) - 2 / -5;
	a := --5;
	a := not not false;
}

/*
 * Literal
 */

function f16() {
	// True
	a := true;

	// False
	a := false;

	// Integer
	a := 1;
	
	// Float
	a := 1.5;

	// String
	a := "string";
}

/*
 * Function call
 */

function f17() {
	// No parameters
	foo();

	// Single parameter
	foo(1);

	// Many parameters
	foo(1, 2, 3);
	
	// Constructor call
	Type();

	// Method call
	a.foo();
}

/*
 * Monitor
 */

// Empty
monitor Monitor {}

// Single property/method
monitor Monitor {
	a: Integer;
}

// Mixed between properties, methods and constructors
monitor Monitor {
	a: Integer;
	function foo() {}
	initializer() {}
	b: Integer;
	function bar() {}
}

/*
 * Method definition
 */

monitor Monitor {
	function foo() {

	}
	
	private function bar() {

	}
}

/*
 * Constructor definition
 */

monitor Monitor {
	initializer(a: Int) {
		print(a);
	}
}
