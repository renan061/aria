-- Title
Numeric "for"
-- Input
function main {
    for i in [0 -> 10] {}
    for i in [0 <- 10] {}
    for i in [0 => 10] {}
    for i in [0 <= 10] {}

    for i in [0, 2 -> 10] {}
    for i in [0, 2 <- 10] {}
    for i in [0, 2 => 10] {}
    for i in [0, 2 <= 10] {}

    for i in [0, -2 <= -10] {}

    for i in [0 -> 10] {
        print(i);
    }
}
-- Output
