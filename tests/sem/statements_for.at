-- Title
Simple "for" statement (Integer)
-- Input
function main {
    for variable i = 0; i < 10; i = i + 1 {
        print("%d", i);
    }
}
-- Output
function main: Void {
    for
    variable i: Integer = (0: Integer)
    ((i: Integer) <: Boolean (10: Integer))
    i: Integer = ((i: Integer) +: Integer (1: Integer))
    {
        print(("%d": String), (i: Integer)): Integer
    }
}
