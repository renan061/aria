--------------------------------------------------------------------------------
-- Title
Literal expressions
-- Input
function main {
    // boolean
    variable a = true;
    a = false;
    // integer
    variable b = 1453;
    // float
    value c = 3.1415;
    // string
    value letter = "e";
    value word = "string";
    value spaced = "s p a c e d s t r i n g";
    // array
    value array = [1];
}
-- Output
function main: Void {
    variable a: Boolean = (true: Boolean)
    a: Boolean = (false: Boolean)
    variable b: Integer = (1453: Integer)
    value c: Float = (3.141500: Float)
    value letter: String = ("e": String)
    value word: String = ("string": String)
    value spaced: String = ("s p a c e d s t r i n g": String)
    value array: [Integer] = ([(1: Integer)]: [Integer])
}
--------------------------------------------------------------------------------
-- Title
Variable (capsa) expressions
-- Input
function main {
    value word = "string";
    value capsa = word;
}
-- Output
function main: Void {
    value word: String = ("string": String)
    value capsa: String = (word: String)
}
--------------------------------------------------------------------------------
-- Title
Function call expressions
-- Input
function main: Boolean {
    value loop = main();
}
-- Output
function main: Boolean {
    value loop: Boolean = (main(): Boolean)
}
--------------------------------------------------------------------------------
-- Title
List comprehension expressions
-- Input
function main {
    value array = [i | i in 0...10];
}
-- Output
function main: Void {
    value array: [Integer] = ([(i: Integer) |
        value i: Integer in
        (0: Integer)..(10: Integer)
    ])
}
